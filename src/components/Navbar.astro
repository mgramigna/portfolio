---
import NavMenu from "./NavMenu";
import { ROUTES } from "../constants/routes.js";
---

<div class="h-12 w-full bg-stone-900">
  <div
    class="hidden h-full w-full items-center justify-center gap-x-12 pl-4 sm:flex"
  >
    {
      ROUTES.map((r) => (
        <div
          class={`rounded-full px-2 hover:text-slate-200 ${
            Astro.url.pathname === r.href && "bg-slate-400/50"
          }`}
        >
          <a href={r.href}>{r.display}</a>
        </div>
      ))
    }
  </div>
  <div class="flex h-full items-center justify-end sm:hidden">
    <div class="flex items-center pr-4">
      <NavMenu client:load />
    </div>
  </div>
</div>
