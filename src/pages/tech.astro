            <ProficiencyCircle level={2} />
          </div>
          <div class="flex justify-between">
            <div class="italic">Django</div>
            <ProficiencyCircle level={1} />
          </div>
          <div class="flex justify-between">
            <div class="italic">Flask</div>
            <ProficiencyCircle level={1} />
          </div>
        </div>
      </div>
      <div class="pt-4 text-center text-2xl sm:pt-0">
        <div class="rounded-lg border-2 p-2 sm:p-4">Databases</div>
        <div class="flex flex-col pt-4 text-left text-xl">
          <div class="flex justify-between">
            <div class="italic">Postgres</div>
            <ProficiencyCircle level={3} />
          </div>
          <div class="flex justify-between">
            <div class="italic">MySQL</div>
            <ProficiencyCircle level={2} />
          </div>
          <div class="flex justify-between">
            <div class="italic">MongoDB</div>
            <ProficiencyCircle level={4} />
          </div>
          <div class="flex justify-between">
            <div class="italic">SQLite</div>
            <ProficiencyCircle level={1} />
